{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    // "strict": true,
    "target": "es5",
    "jsx": "react",
    // "noEmit": true
    "allowSyntheticDefaultImports":true,
    "noImplicitAny":true,
    "noImplicitThis":true,
    "noImplicitReturns":true,
    "strictNullChecks":true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "include": [
    "app/javascript"
  ],
  "files": [
    "app/javascript/images.d.ts"
  ],
  "compileOnSave": false
}
